<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Student_Portal.Views.NewCoursePage1"
             xmlns:behaviors="clr-namespace:Student_Portal.Behaviors"
             xmlns:local="clr-namespace:Student_Portal">
    <ContentPage.Content>

        <Grid BackgroundColor="#ECF0F1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <Label 
                Text="Create Course"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="#ECF0F1"
                HeightRequest="57"
                BackgroundColor="#2980B9"/>
            <StackLayout
                Grid.Row="1"
                Spacing="20"
                Padding="20"
                VerticalOptions="StartAndExpand">

                <Entry 
                    Placeholder="Course Title" 
                    PlaceholderColor="#696969" 
                    FontSize="Medium" 
                    HeightRequest="50"
                    TextChanged="Title_TextChanged"
                    Text="{Binding Title, Mode=OneWayToSource}">
                    <Entry.Behaviors>
                        <behaviors:EmptyValidationBehavior />
                    </Entry.Behaviors>
                </Entry>

                <!--Start date label and DatePicker-->
                <Label Text="Start Date" TextColor="#696969" FontSize="Medium"/>
                <DatePicker 
                    x:Name="StartDate"
                    DateSelected="StartDate_Selected"
                    TextColor="#696969" 
                    HeightRequest="50" 
                    Date="{Binding StartDateSelected, Mode=OneWayToSource}"
                    FontSize="Medium" />

                <!--End date label and DatePicker-->
                <Label Text="End Date" TextColor="#696969" FontSize="Medium"/>
                <DatePicker 
                    x:Name="EndDate"
                    DateSelected="EndDate_Selected"
                    TextColor="#696969" 
                    HeightRequest="50" 
                    Date="{Binding EndDateSelected, Mode=OneWayToSource}"
                    FontSize="Medium"/>

                <!--Status Picker-->
                <Label Text="Status" TextColor="#696969" FontSize="Medium"/>
                <Picker
                    Title="Select Status"
                    SelectedIndexChanged="StatusIndexChanged"
                    SelectedItem="{Binding SelectedItem}">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>In Progress</x:String>
                            <x:String>Completed</x:String>
                            <x:String>Dropped</x:String>
                            <x:String>Plan To Take</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

            </StackLayout>
            <Grid
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button 
                    Text="Cancel"
                    TextColor="{StaticResource RedColor}"
                    Margin="10,0"
                    CornerRadius="10"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    BackgroundColor="{StaticResource GrayColor}"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Command="{Binding CancelCommand}"/>
                
                <Button 
                    x:Name="NextButton"
                    Grid.Column="1"
                    Margin="10,0"
                    Text="Next"
                    TextColor="{StaticResource LabelTextColor}"
                    CornerRadius="10"
                    FontSize="Medium"
                    FontAttributes="Bold"
                    BackgroundColor="{StaticResource MainColor}"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    Command="{Binding NextCommand}"/>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>